- title = "Registrierung"

.row
  .large-8.large-offset-4.columns.shape
    %h2
      Registrierung
    = form_for(resource, :as => resource_name, :class => "custom", :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .large-12.columns
          E-Mail
          = f.email_field :email
      .row
        .large-12.columns
          Benutzername
          = f.text_field :username
      .row
        .large-12.columns
          Passwort
          = f.password_field :password
      .row
        .large-12.columns
          Passwort bestÃ¤tigen
          = f.password_field :password_confirmation
      .row
        .large-12.columns.spacetop.spacebottom
          = f.label "Orte"
          = f.select :kommune, options_from_collection_for_select(@kommunen, 'id', 'name', resource.kommune), class: '', include_blank: true, data: { optional: true, placeholder: 'Ort auswÃ¤hlen' }
      .row
        .large-12.columns
          %label{:for => "checkbox"}
            = f.check_box :nutzungsbedingung, {:default => false, :id => "checkbox"}
            %span{:class => "custom checkbox"}
            %b
              Hiermit akzeptiere ich die
              %a{:href => "/regeln", :target => "_blank"}
                Nutzungsbindungen
            %br
            %br
      .row
        .large-12.columns
          = f.submit "Registrieren", :class => "button radius"
      .row
        .large-12.columns
          = render "devise/shared/links"
