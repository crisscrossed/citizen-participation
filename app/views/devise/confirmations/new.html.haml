- title "Verifizierung wiederholen"

.row
  .large-8.large-offset-4.columns.shape
    %h1
      Verifizierung wiederholen

    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      .row
        .large-12.columns
          E-Mail
          = f.email_field :email
      .row
        .large-12.columns
          = f.submit "E-Mail schicken", :class => "button radius"
      .row
        .large-12.columns
          = render "devise/shared/links"