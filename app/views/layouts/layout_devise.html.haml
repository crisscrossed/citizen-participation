%html{:lang => "de"}
  / <![endif]
  = render "/layouts/header"
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title
      Aachen mach mit -
      = content_for?(:title) ? yield(:title) : ""
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body
    .container
      .row
        .large-12
      .row
        .large-12.columns.flash-span.spacetop-50
          - if flash[:notice]
            .alert-box.success
              = flash[:notice]
          - if flash[:alert]
            .alert-box
              = flash[:alert]
          - if flash[:error]
            .alert-box.error
              = flash[:error]

      .row
        .large-6.small-centered.columns.spacetop#login-box
          = yield
