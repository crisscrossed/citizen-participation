#login-window.reveal-modal.small{"data-reveal" => ""}
  %h2
    Anmelden
  = form_for(User.new, :url => session_path('user')) do |f|
    = hidden_field_tag 'modal', '1'
    .row
      .small-8.columns
        E-Mail
        = f.email_field :email
    .row
      .small-8.columns
        Passwort
        = f.password_field :password
    .row.spacetop-20.spacebottom-20
      .small-8.columns
        %label{:for => "remember_me"}
          = f.check_box :remember_me
          %span.custom.radio
            FÃ¼r 2 Wochen speichern
          %br
          %br
    %a.close-reveal-modal
      X



    .row
      .small-10.columns
        = f.submit "Anmelden", :class => "button radius"
        = render "devise/shared/links"