%p{:class => "block-#{user.id}"}
  - if user.blocked?
    - if can? :unblock, User
      = link_to unblock_profile_path(user), method: :post,remote: true, class: 'btn blue', :style => "color: #ffffff; margin-top: 18px"  do
        Freigeben

  - else
    - if can? :block, User
      = link_to block_profile_path(user), method: :post, remote: true, class: 'button radius', :style => "color: #ffffff; margin-top: 18px"  do
        Blockieren