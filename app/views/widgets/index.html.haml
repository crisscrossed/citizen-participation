= title "Widgets"

.row
  .large-12.columns
    #content
      .row
        .large-6.columns
          %h1 Widgets
        .large-6.columns
          = link_to "Neues Widget", new_widget_path, :class => "button radius right"

      .row
        .large-4.columns
          Widget-Typ
        .large-4.columns
          Erscheint
        .large-4.columns
          Funktionen
      - @widgets.each do |widget|
        .row
          .large-4.columns
            %p
              = link_to widget.name, edit_widget_path(widget)
          .large-4.columns
            %p
              - widget.placements.each do |placement|
                = placement.controller
          .large-4.columns
            - if can? :edit, widget
              = link_to 'Bearbeiten', edit_widget_path(widget)
            - if can? :destroy, widget
              = link_to 'LÃ¶schen', widget, :method => :delete, :data => { :confirm => 'Sind Sie sich sicher?' }

